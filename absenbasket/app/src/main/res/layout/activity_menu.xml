<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_tambahAbsen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Absen"
            />
        <Button
            android:id="@+id/btn_histori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histori"
            />
        <Button
            android:id="@+id/btn_tambahAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Anggota"
            />
        <Button
            android:id="@+id/btn_daftarAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Anggota"
            />
    </LinearLayout>

</RelativeLayout>